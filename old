RewriteEngine On
RewriteBase /GitHube/logemangue/

# Ne pas réécrire les fichiers et dossiers existants
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f

# Réécriture vers le dossier php
RewriteRule ^(.+)$ php/$1.php [L]

# Redirige les anciennes URLs /php/page.php → /page
RewriteCond %{THE_REQUEST} \s/php/(.+)\.php[\s?]
RewriteRule ^ %1 [R=301,L]
